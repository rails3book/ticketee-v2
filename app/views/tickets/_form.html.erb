<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 10 %>
  </p>

  <%= render "tags/form", :f => f %>

  <% number = 0 %>
  <div id='files'>
    <%= render :partial => "files/form",
      :locals  => { :number => number } %>
  </div>

  <%= link_to "Add another file", 'javascript:',
    :id => "add_another_file" %>

  
  <%= f.submit %>
<% end %>
